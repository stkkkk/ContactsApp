
<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Telegram</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <% if contact.user == current_user %>
          <tr>
            <td> <%= link_to contact.first_name + ' ' + contact.last_name, contact %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.telegram %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path, class:"btn btn-secondary" %>

<% else %>
  <h2>Welcome to Contacts App<br /></h2>
  <h5><%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'create', new_user_registration_path %> a new account. </h5>
<% end %>