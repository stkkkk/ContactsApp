
<div class="jumbotron">
  <h1 class="display-4"><%= @contact.first_name %> <%= @contact.last_name %></h1>
  <p class="lead">
    <%= @contact.email %>  |
    <%= @contact.phone %>  |
    <%= @contact.telegram %>
    </p>
    <br/>


<div class="d-flex bd-highlight mb-3">
<div class="pr-1 bd-highlight"><%= link_to 'Edit', edit_contact_path(@contact), class:"btn btn-secondary" %></div>
<div class="pl-1 bd-highlight"><%= link_to 'Back', contacts_path, class:"btn btn-dark" %></div>
<div class="ml-auto bd-highlight"><%= link_to 'Delete', @contact, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></div>
</div>

</div>
